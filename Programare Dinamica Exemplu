#include <iostream>
#include <fstream>
#include <vector>
#include <queue>

using namespace std;

ifstream fin ("date.in");
ofstream fout ("date.out");


vector <pair<int , int>> v;
int contor, numar, maxim = -1;

int incadrareaNrInProd(int n)
{
    int i = 1, suma = 1;
    while(suma <= n)
        i++, suma += i;
    return i;
}

void afisareElemCuSumaMaxima(int c, int incadrare)
{
    int numarPrecedent = 1, nr, i;
    for(i = 0; i <= c; i++)
        numarPrecedent += i;
    fout << v[numarPrecedent - 1].second << ' ';
    nr = numarPrecedent - 1;
    for(int j = i + 1; j <= incadrare; j++)
    {
        nr += j;
        if(v[nr].first == 1)
            fout << v[nr].second << ' ';
    }
}

int main()
{
    while(fin >> numar)
    {
        contor++;
        v.push_back(make_pair(1, numar));
    }

    int numarPrecedent = 1;
    int suma = 0;
    int nr, c = 0;
    int incadrare = incadrareaNrInProd(contor);
    for(int i = 0; i < incadrare; i++)
    {
        suma = 0;
        numarPrecedent += i;
        nr = numarPrecedent - 1;
        suma = v[numarPrecedent - 1].second;
        for(int j = i + 2; j <= incadrare; j++)
        {
            nr += j;
            if(v[nr].first == 1)
                suma += v[nr].second;
        }
        if(suma > maxim)
            maxim = suma, c = i;
    }
    fout << maxim << '\n';
    afisareElemCuSumaMaxima(c, incadrare);
    return 0;
}
